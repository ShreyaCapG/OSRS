@model IEnumerable<OSRSClientSide.Models.ProductDTO>

@{
    ViewBag.Title = "ShowProducts";
    string amEditProfile = "Index";
    string cnEditProfile = "EditProfile";
    string amViewOrder = "Index";
    string cnViewOrder = "ViewOrder";
}

<h2 style="text-align: center;">List of Products</h2>
<input type="button"
       value="Edit Profile"
       onclick="location.href= '@Url.Action(@amEditProfile, @cnEditProfile )' " class="btn btn-default" />
<input type="button"
       value="View Order"
       onclick="location.href= '@Url.Action(@amViewOrder, @cnViewOrder)' " class="btn btn-default" />
<p>
    @Html.ActionLink("Add New Product", "AddProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.userid)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_id)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.userid)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_category)
        </td>
        <td>
            @Html.ActionLink("Update", "UpdateProduct", new { id = item.product_id }) |
           
            @Html.ActionLink("Delete", "DeleteProduct", new { id = item.product_id })
        </td>
    </tr>
}

</table>
