@model IEnumerable<OSRSClientSide.Models.CartItemsDTO>

@{
    ViewBag.Title = "ViewCart";
}

<h2>ViewCart</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price
        </th>
        <th>
            Product Category
        </th>
        <th>
            Quantity
        </th>
        <th>
            No of renting days
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @item.product_name
    </td>
    <td>
        @item.price
    </td>
    <td>
        @item.product_category
    </td>
    <td>
        @item.quantity
    </td>
    <td>
        @item.no_of_renting_days
    </td>
</tr>
}

</table>

<input type="button"
       value="Place Order"
       onclick="location.href= '@Url.Action("Index", "ViewOrderCustomer" )' " class="btn btn-default" />
