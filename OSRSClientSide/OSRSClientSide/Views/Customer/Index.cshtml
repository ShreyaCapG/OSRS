@model IEnumerable<OSRSClientSide.Models.ProductDTO>
@{
    ViewBag.Title = "Index";
    //string btnPlaceOrder = "Place Order";
    string amPayment = "Index";
    string cnPayment = "Payment";
    string amEditProfile = "Index";
    string cnEditProfile = "EditProfile";
    string amViewCart = "Cart";
    string cnViewCart = "Customer";
}

<h2>View Products</h2>


@*@if (Session["userid"] != null)
    {
        <p>
            userid is @Session["userid"]
