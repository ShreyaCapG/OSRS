<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.product_name)*@ Product Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.price)*@ Price
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.product_category)*@ Product Category
        </th>
        <th> Add to Cart </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_category)
            </td>
            <td>
                @Html.ActionLink("Add to cart", "Addcart", new { id = item.product_id })


            </td>
        </tr>
    }

</table><div class="col-md-offset-2 col-md-10" style="text-align:right">
